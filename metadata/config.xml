<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.0//EN" "http://resources.openmrs.org/doctype/config-1.0.dtd">

<module configVersion="1.0">
	
	<!-- Base Module Properties -->
	<id>simplelabentry</id>
	<name>Simple Lab Entry</name>
	<version>1.0</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Michael Seaton</author>
	<description>Lab Order and Result Entry</description>
	<activator>@MODULE_PACKAGE@.SimpleLabEntryActivator</activator>
	<!-- /Base Module Properties -->
	
	<require_version>1.3.0.01.4914</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.AdminList</class>
	</extension>

	<!-- Required Global Properties -->
	<globalProperty>
		<property>@MODULE_ID@.labSetConcepts</property>
		<defaultValue>1019,657</defaultValue>
		<description>Defines the Concept IDs of the possible Lab Test Types (labSets) that may be entered using this module</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.labOrderType</property>
		<defaultValue>4</defaultValue>
		<description>The ID of the OrderType that represents a Lab Test Order</description>
	</globalProperty>
	<globalProperty>
		<property>@MODULE_ID@.labTestEncounterType</property>
		<defaultValue>9</defaultValue>
		<description>The ID of the Encounter Type that represents a Lab Test Encounter</description>
	</globalProperty>	
	<globalProperty>
		<property>@MODULE_ID@.patientIdentifierType</property>
		<defaultValue>5</defaultValue>
		<description>The Identifier Type to use when searching for / creating patients</description>
	</globalProperty>	

	<!-- /Required Global Properties -->
	<!-- DWR -->
	<dwr>
		<allow>
			<convert converter="collection" match="java.util.Collection"/>
			<convert converter="bean" match="org.openmrs.module.simplelabentry.web.dwr.LabPatientListItem"/>
			<convert converter="bean" match="org.openmrs.module.simplelabentry.web.dwr.LabOrderListItem"/>
			<convert converter="bean" match="org.openmrs.module.simplelabentry.web.dwr.LabResultListItem"/>
			<create creator="new" javascript="LabResultListItem">
				<param name="class" value="org.openmrs.module.simplelabentry.web.dwr.LabResultListItem"/>
			</create>
			<create creator="new" javascript="DWRSimpleLabEntryService">
				<param name="class" value="org.openmrs.module.simplelabentry.web.dwr.DWRSimpleLabEntryService"/>
				<include method="getPatient"/>
				<include method="getPatientByIdentifier"/>
				<include method="addPatientIdentifier"/>
				<include method="createPatient"/>
				<include method="getOrder"/>
				<include method="saveLabOrder"/>
				<include method="deleteLabOrderAndEncounter"/>
			</create>
		</allow>
		<signatures>
			<![CDATA[
				import org.openmrs.module.simplelabentry.web.dwr.DWRSimpleLabEntryService;
				import org.openmrs.module.simplelabentry.web.dwr.LabResultListItem;
				import java.util.Map;
				DWRSimpleLabEntryService.saveLabOrder(Integer orderId, Integer patientId, String orderConceptStr, String orderLocationStr, String orderDateStr, String accessionNumber, String discontinuedDateStr, Map<String, LabResultListItem> labResults);
			]]>
		</signatures>
	</dwr>

	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	
</module>

