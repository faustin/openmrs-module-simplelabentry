<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean id="simpleLabEntryUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="order"><value>50</value></property>
    	<property name="mappings">
            <props>
	           <prop key="module/@MODULE_ID@/simpleLabEntry.form">simpleLabEntryFormController</prop>
	           <prop key="module/@MODULE_ID@/resultEntry.form">resultEntryFormController</prop>
	           <prop key="**/labOrders.portlet">simpleLabEntryPortletController</prop>
	           <prop key="**/orderEntry.portlet">simpleLabEntryPortletController</prop>
	    	</props>
		</property>
    </bean>
    
    <bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.simplelabentry.SimpleLabEntryService</value> 
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.simplelabentry.impl.SimpleLabEntryServiceImpl" />
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
    <!-- Controllers -->
    
    <bean id="simpleLabEntryPortletController" class="org.openmrs.module.simplelabentry.web.controller.LabEntryPortletController" />
      
    <bean id="simpleLabEntryFormController" class="@MODULE_PACKAGE@.web.controller.SimpleLabEntryFormController">
		<property name="commandName"><value>command</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/simpleLabEntryForm</value></property>
		<property name="successView"><value>simpleLabEntry.form</value></property>
    </bean>

    <bean id="resultEntryFormController" class="@MODULE_PACKAGE@.web.controller.ResultEntryFormController">
		<property name="commandName"><value>command</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/resultEntryForm</value></property>
		<property name="successView"><value>resultEntry.form</value></property>
    </bean>
	
    <!-- /Controllers -->
</beans>
